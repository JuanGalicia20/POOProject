<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundhorarios"
    android:weightSum="10"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/changeUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="15dp"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="393dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageCloseU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:maxHeight="40dp"
                android:rotation="-90"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/flechaapuntaaladerecha" />

            <TextView
                android:id="@+id/textViewUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/amaranth"
                android:text="Cambiar tu nombre de usuario"
                android:textSize="30dp" />


            <EditText
                android:id="@+id/txtViewCUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:ems="10"
                android:hint="Nuevo nombre de usuario"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtViewConfirmarPU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="25dp"
                android:ems="10"
                android:hint="Confirmar contraseña"
                android:inputType="textPersonName" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancelU"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="#20B2AA"
                    android:fontFamily="@font/amaranth"
                    android:text="Cancelar"
                    android:layout_marginLeft="25dp"
                    android:textColor="@android:color/white"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/btnChangeU"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="25dp"
                    android:background="#20B2AA"
                    android:fontFamily="@font/amaranth"
                    android:text="Cambiar"
                    android:textColor="@android:color/white"
                    android:textSize="25dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

