            <TextView
                android:id="@+id/textViewUserCEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/amaranth"
                android:text="Cambiar tu e-mail"
                android:textSize="30dp" />


            <EditText
                android:id="@+id/txtViewCEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:ems="10"
                android:hint="Nuevo e-mail"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtViewConfirmarPE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:hint="Confirmar la contraseña"
                android:inputType="textPersonName" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancelE"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginLeft="25dp"
                    android:background="#167F79"
                    android:fontFamily="@font/amaranth"
                    android:text="Cancelar"
                    android:textColor="@android:color/white"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/btnChangeE"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="25dp"
                    android:background="#167F79"
                    android:fontFamily="@font/amaranth"
                    android:text="Cambiar"
                    android:textColor="@android:color/white"
                    android:textSize="25dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/DeleteAccount"
        android:layout_width="match_parent"
        android:layout_height="355dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="15dp"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="351dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageCloseDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:maxHeight="40dp"
                android:rotation="-90"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/flechaapuntaaladerecha" />


            <TextView
                android:id="@+id/textViewDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="20dp"
                android:fontFamily="@font/amaranth"
                android:text="¿Estás seguro de que deseas borrar tu cuenta?"
                android:textAlignment="center"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textViewUserDelete2"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"

                android:layout_marginBottom="20dp"
                android:fontFamily="@font/amaranth"
                android:text="Este es un cambio permanente, así que una vez aceptes, no habrá marcha atrás"
                android:textAlignment="center"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancelD"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="25dp"
                    android:background="#167F79"
                    android:fontFamily="@font/amaranth"
                    android:text="Cancelar"
                    android:textColor="@android:color/white"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/btnAcceptD"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="25dp"
                    android:background="#167F79"
                    android:fontFamily="@font/amaranth"
                    android:text="Aceptar"
                    android:textColor="@android:color/white"
                    android:textSize="25dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>



